<!doctype html>
<html lang="{% if lang == "de" %}de-de{% else %}en-us{% endif %}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Nowhere</title>
    <meta name="description" content="Project Nowhere by Anna Meyer.">
    <meta name="author"
          content="Anna Meyer | http://www.sayhellotoanna.com/ &amp; Markus Tacker | http://coderbyheart.de/">

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link rel="stylesheet" href="/assets/complete-min.css">

    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
<nav id="topnav" class="desktop">
    <ul>
        <li class="col1 left"><a href="/{{ lang }}/about" class="hover textimage {% if navactive == "about" %}textimage-nav-active{% else %}textimage-nav{% endif %}">About</a></li>
        <li class="col1 center">
            <a href="/" class="icon grid {% if navactive == "stones" %}active{% endif %}" title="Grid view" rel="bookmark"></a>
            <a href="/{{ lang }}/stones/list" class="icon list {% if navactive == "stones-list" %}active{% endif %}" title="List view"></a>
        </li>
        <li class="col2">&nbsp;</li>
        <li class="col1 center"><a href="/{% if lang == "en" %}de{% endif %}" hreflang="{% if lang == "en" %}de-de{% else %}en-us{% endif %}" class="hover textimage textimage-nav">{% if lang == "en" %}DE{% else %}EN{% endif %}</a></li>
        <li class="col1 right"><a href="/{{ lang }}/participate" class="hover textimage {% if navactive == "participate" %}textimage-nav-active{% else %}textimage-nav{% endif %}">Participate</a></li>
    </ul>
</nav>
<nav id="footernav" class="desktop">
    <ul>
        <li class="col1"><a href="/{{ lang }}/news" class="hover textimage {% if navactive == "news" %}textimage-nav-active{% else %}textimage-nav{% endif %}">News</a></li>
        <li class="col2"><a href="/{{ lang }}/contact" class="hover textimage {% if navactive == "contact" %}textimage-nav-active{% else %}textimage-nav{% endif %}">Contact</a></li>
    </ul>
</nav>
<nav id="mobilenav" class="mobile">
    <ul>
        <li><a href="/" rel="bookmark" class="hover textimage {% if navactive == "stones" %}textimage-nav-active{% else %}textimage-nav{% endif %}">Stones</a></li>
        <li><a href="/{{ lang }}/places" id="placeslink" class="hover textimage {% if navactive == "places" %}textimage-nav-active{% else %}textimage-nav{% endif %}">Places</a></li>
        <li><a href="/{{ lang }}/about" class="hover textimage {% if navactive == "about" %}textimage-nav-active{% else %}textimage-nav{% endif %}">About</a></li>
        <li><a href="/{% if lang == "en" %}de{% endif %}" hreflang="{% if lang == "en" %}de-de{% else %}en-us{% endif %}">{% if lang == "en" %}DE{% else %}EN{% endif %}</a></li>
        <li><a href="/{{ lang }}/contact" class="hover textimage {% if navactive == "contact" %}textimage-nav-active{% else %}textimage-nav{% endif %}">Contact</a></li>
    </ul>
</nav>
<aside id="left" class="desktop">
    <h2><a href="/" class="hover textimage {% if navactive == "stones" %}textimage-h2-active{% else %}textimage-h2{% endif %}">Stones</a></h2>
</aside>
<aside id="right" class="desktop">
    <h2><a href="/{{ lang }}/places" class="hover textimage {% if navactive == "places" %}textimage-h2-active{% else %}textimage-h2{% endif %}">Places</a></h2>
</aside>
{% block body %}{% endblock %}

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="/js/libs/jquery-1.7.1.min.js"><\/script>')</script>
<script src="/assets/base-min.js"></script>
<!-- end scripts-->
<!--[if lt IE 7 ]>
<script src="http://ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
<script>window.attachEvent("onload", function () {
    CFInstall.check({mode:"overlay"})
})</script>
<![endif]-->
</body>
</html>
