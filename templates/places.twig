{% extends "base.twig" %}
{% block body %}
<header id="master" class="desktop">
    <h1>Nowhere</h1>
</header>
<div id="main">
    {% for stone in stones %}
    {% if loop.first %}
    <ul id="placesgrid" class="draggrid">
        {% endif %}
        <li>
            <a href="/{{ lang }}/stone/{{ stone.number }}"
               title="{{ stone.locality }} in {{ stone.country }} where {{ stone.person }} found a stone."><img
                    src="/media/stones/{{ stone.number }}-place-150.jpg"
                    alt="{{ stone.locality }} in {{ stone.country }} where {{ stone.person }} found a stone."
                    class="{% if stone.ar < 1 %}landscape{% else %}portrait{% endif %}"
                    /></a>
        </li>
        {% if loop.last %}
    </ul>
    {% endif %}
    {% endfor %}
</div>
{% from 'macros.twig' import coordlink %}
{{ coordlink(lang, navactive) }}
{% endblock %}