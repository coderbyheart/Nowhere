{% extends "base.twig" %}
{% block body %}
<div id="main">
    {% for stone in stones %}
    {% if loop.first %}
    <ul id="placesgrid" class="draggrid">
        {% endif %}
        {% set locality = stone.locality %}
        {% set country = stone.country %}
        {% set person = stone.person %}
        <li>
            <a href="/{{ lang }}/stone/{{ stone.number }}"
               title="{% trans %}{{ locality }} in {{ country }} where {{ person }} found a stone.{% endtrans %}"><img
                    src="/media/stones/{{ stone.number }}-place-150.jpg"
                    alt="{% trans %}{{ locality }} in {{ country }} where {{ person }} found a stone.{% endtrans %}"
                    class="{% if stone.ar < 1 %}landscape{% else %}portrait{% endif %}"
                    /></a>
        </li>
        {% if loop.last %}
    </ul>
    {% endif %}
    {% endfor %}
</div>
{% endblock %}