{% extends "base.twig" %}
{% block body %}
<header id="master" class="desktop">
    <h1 class="textimage">Nowhere</h1>
</header>
<div id="main">
    {% for stone in stones %}
    {% if loop.first %}
    <ul id="coordsgrid" class="draggrid">
        {% endif %}
        {% set locality = stone.locality %}
        {% set country = stone.country %}
        {% set person = stone.person %}
        <li>
            <a href="/{{ lang }}/stone/{{ stone.number }}"
               title="{% trans %}Coordinates in {{ locality }}, {{ country }} where {{ person }} found a stone.{% endtrans %}">
                <span class="textimage textimage-coordinates">{{ stone.lat }}</span><br/>
                <span class="textimage textimage-coordinates">{{ stone.lng }}</span>
            </a>
        </li>
        {% if loop.last %}
    </ul>
    {% endif %}
    {% endfor %}
</div>
{% from 'macros.twig' import coordlink %}
{{ coordlink(lang, navactive) }}
{% endblock %}