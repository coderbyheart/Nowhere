{% extends "base.twig" %}
{% block content %}
<div id="stone">
    <div class="coordinates">
        <div class="wrapper">
            <a href="http://maps.google.com/?ll={{ stone.latc }},{{ stone.lngc }}&amp;spn=0.1,0.1&amp;q={{ stone.latc }},{{ stone.lngc }}"
               title="Show this place ({{ stone.locality }} in {{ stone.country }}) in Google Maps" class="coordinates">
                {{ stone.lat }}<br/>
                {{ stone.lng }}
            </a>
        </div>
    </div>
    <img src="/media/stones/{{ stone.number }}-place-1024.jpg"
         alt="{{ stone.locality }} in {{ stone.country }} where {{ stone.person }} found this stone."/>
</div>
{% endblock content %}
